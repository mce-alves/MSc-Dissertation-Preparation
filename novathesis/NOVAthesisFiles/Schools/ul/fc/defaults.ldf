\ntaddtocover[vspace=0.5cm, height=5cm, inalign=t]{%
	\ifphddoc%
    {\hspace*{7mm}\includegraphics[height=4.55cm]{logoFCUL}}%
    {\includegraphics[width=7cm]{logoFCUL2}}%
}

