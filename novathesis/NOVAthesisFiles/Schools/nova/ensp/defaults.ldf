%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Draw the cover page
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\AtBeginCover{%
  \ifxeorlua{\setmainfont[Ligatures=TeX]{TeX Gyre Heros}}{\fontfamily{phv}}%
}

% ENSP logo
\ntaddtocover[vspace=1cm]{%
  \noindent\includegraphics[width=0.4\textwidth]{nova-ensp-logo-pt}
}

% % Title of Dissertation
\ntaddtocover[vspace=1]{%
  \fontsize{14}{14}\selectfont
  \textbf{\thecovertitle}
}

% % Title of Dissertation
\ntaddtocover[vspace=1cm]{%
  \fontsize{14}{14}\selectfont
  \thedegreename(\option{/novathesis/coverlang})
}

% Author name
\ntaddtocover[vspace=1]{%
  \fontsize{12}{12}\selectfont
  \textbf{\theauthorname}
}

% Degree
\ntaddtocover[cover=2, vspace=1]{%
  \fontsize{11}{11}\selectfont
  \thepresentationtext
}

% Advisers
\ntaddtocover[cover=2, vspace=1]{%
  \fontsize{12}{12}\selectfont
  \ntprintadvisers[0.75]
}

% Date
\ntaddtocover[vspace=1]{%
  \fontsize{12}{12}\selectfont
  \ifdraftdoc
    \textbf{DRAFT: \today}
  \else
    \textbf{\thentdatemonth, \thentdateyear}
  \fi
}

% % Final space
\ntaddtocover[vspace=1cm]{%
  ~
}
