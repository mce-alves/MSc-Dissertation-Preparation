\AtBeginCover{%
  \ifxeorlua{\setmainfont[Ligatures=TeX]{TeX Gyre Heros}}{\fontfamily{phv}}%
}

\definecolor{fcshblue}{RGB}{25,61,108}% Background title color


\ntaddtocover[cover=1, align=l, vspace=1.0cm]{%
  \null%
  \begin{tabular*}{{0.5\stockwidth}}[c]{@{\hspace*{0.8cm}}l@{}}%
    \includegraphics[width=9cm]{novologo_cores_crop}%
  \end{tabular*}%
}

\ntaddtocover[cover=2, align=l, vspace=1.0cm]{%
